<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"


        android:padding="40dp"
        tools:context=".AddAdsDetail">

        <Button
            android:id="@+id/button5"
            android:layout_width="28dp"
            android:layout_height="32dp"

            android:background="@drawable/back_icon2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Venue Details"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="jelly_bean" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hapticFeedbackEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/ads"
            tools:layout_editor_absoluteX="7dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_adsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"

                android:layout_marginRight="40dp"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="@font/poppinsmedium"
                android:hint="   Venue Name"
                tools:targetApi="jelly_bean" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adsName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hapticFeedbackEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/adsName"
            tools:layout_editor_absoluteX="7dp"
            app:layout_editor_absoluteY="35dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_adsName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"

                android:layout_marginRight="40dp"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="@font/poppinsmedium"
                android:hint="   Location"
                tools:targetApi="jelly_bean" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adsName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hapticFeedbackEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/adsName2"
            tools:layout_editor_absoluteX="7dp"
            app:layout_editor_absoluteY="35dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_adsName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"

                android:layout_marginRight="40dp"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="@font/poppinsmedium"
                android:hint="   Note"
                tools:targetApi="jelly_bean" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adsName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hapticFeedbackEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/adsName3"
            tools:layout_editor_absoluteX="7dp"
            app:layout_editor_absoluteY="35dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_adsName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"

                android:layout_marginRight="40dp"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="@font/poppinsmedium"
                android:hint="   Estimated Amount"
                tools:targetApi="jelly_bean" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/ads2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            app:layout_goneMarginTop="40dp"
            android:text="Contact Details"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@id/tv_category"
            tools:targetApi="jelly_bean" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Balance: RM102.39"
            android:textColor="#C39895"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.173"
            app:layout_constraintStart_toStartOf="@+id/adsName4"
            app:layout_constraintTop_toBottomOf="@+id/adsName4" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adsPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adsNotes">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/it_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="@font/poppinsmedium"
                android:hint="   Email"
                android:inputType="number"
                tools:targetApi="jelly_bean" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_saveChangesGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/poppinsbold"
            android:hapticFeedbackEnabled="true"
            android:text="Save Changes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adsPayment"
            tools:ignore="NotSibling" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adsNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ads2"
            tools:layout_editor_absoluteX="38dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/it_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="@font/poppinsmedium"
                android:hint="   Phone Number"
                tools:targetApi="jelly_bean" />

        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>